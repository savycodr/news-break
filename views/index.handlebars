<div id="header-jumbotron" class="jumbotron jumbotron-fluid">
  <h1 class="text-center"> Welcome to News Break </h1>
</div>

{{!-- This block will only be shown if there are no stories loaded yet --}}
{{#unless articles}}
<div id="no-stories" class="jumbotron jumbotron-fluid">
  <h1 class="text-center"> There are no stories loaded yet.</h1>

  <div class="form-row text-center" id="load-stories">
    <div class="col-12">
      <button type="submit" class="btn btn-primary" id="load-stories-btn">Load Stories</button>
    </div>
  </div>
</div>
{{/unless}}


{{!-- This block displays the scraped articles --}}
<div class="container-fluid article-container">
  {{#each articles}}
  <div class="article-container" id="{{@index}}">
    <div class="row title-row">
      <div class="col-sm-10">
        <h2>{{title}}</h2>
      </div>
      <div class="col-sm-2">
        <button type="submit" class="btn btn-primary save-article-btn" data-title="{{title}}" data-summary="{{summary}}"
          data-link="{{link}}" data-number="{{@index}}">Save Article</button>
      </div>
    </div>
    <a href="https://www.nhl.com/{{link}}" target="_blank">
      <div class="row">
        <div class="col-sm-12">
          <h4>{{summary}}</h4>
        </div>
      </div>
    </a>
  </div>
  {{/each}}
</div>